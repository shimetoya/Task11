<%= form_for(@route) do |f| %>
  <%= render 'common/errors', resourse: @route %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :station_ids, "Station list" %>
    <%= f.collection_select :station_ids, Station.all, :id, :title, {}, { multiple: true } %>
  </div>
  <div class="actions">
    <%= f.submit "#{ @route.new_record? ? 'Create Route' : 'Update Route'}"%>
  </div>
<% end %>