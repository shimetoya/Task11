<p id="notice"><%= notice %></p>

<h1><%=t('common.rlist')%></h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th><%=t('.title')%></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
<!--
  <%= render @routes %>
-->
  <% @routes.each do |route| %>
    <tr>
      <td>
        <div id="route_title_<%= route.id %>">
          <%= route.title %>
        </div>
        <%= render 'form', route: route, hidden: true %>
      </td>
      <td><%= link_to t('common.show'), [:admin, route] %></td>
      <td><%= link_to t('common.edit'), '', class: 'edit_route', data: { route_id: route.id} %></td>
      <td><%= link_to t('common.destroy'), [:admin, route], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

