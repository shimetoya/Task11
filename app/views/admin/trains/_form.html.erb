<%= form_for [:admin, train], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>
    <%= render 'common/errors', resourse: train %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :current_station %><br>
    <%= f.collection_select :current_station_id, Station.all, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :current_route %><br>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit', action: train.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
