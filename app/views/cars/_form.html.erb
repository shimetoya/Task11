<%= form_for(@car) do |f| %>
  <%= render 'common/errors', resourse: @car %>
    <strong>Choose cars type:</strong> <p></p>
    <a href="new?car_type=SVCar" ><b>SVCar</b></a> OR
    <a href="new?car_type=CoupeCar" ><b>CoupeCar</b></a> OR
    <a href="new?car_type=EconomyCar" ><b>EconomyCar</b></a> OR
    <a href="new?car_type=SittingCar" ><b>SittingCar</b></a>
    <p></p>
  <% if @car_type == 'CoupeCar' %>
    <%= f. text_field :car_type, :value => 'CoupeCar'%>
    <div class="field">
      <%= f.label :amount_top_seats %><br>
      <%= f.text_field :amount_top_seats %>
    </div>
    <div class="field">
      <%= f.label :amount_bottom_seats %><br>
      <%= f.text_field :amount_bottom_seats %>
    </div>
  <% elsif @car_type == 'EconomyCar'%>
    <%= f. text_field :car_type, :value => 'EconomyCar'%>
    <div class="field">
      <%= f.label :amount_top_seats %><br>
      <%= f.text_field :amount_top_seats %>
    </div>
    <div class="field">
      <%= f.label :amount_bottom_seats %><br>
      <%= f.text_field :amount_bottom_seats %>
    </div>    <div class="field">
      <%= f.label :amount_side_top_seats %><br>
      <%= f.text_field :amount_side_top_seats %>
    </div>
    <div class="field">
      <%= f.label :amount_side_bottom_seats %><br>
      <%= f.text_field :amount_side_bottom_seats %>
    </div>
  <% elsif @car_type == "SVCar" %>
    <%= f. text_field :car_type, :value => 'SVCar'%>
    <div class="field">
      <%= f.label :amount_bottom_seats %><br>
      <%= f.text_field :amount_bottom_seats %>
    </div>
  <% elsif @car_type == 'SittingCar'%>
    <%= f. text_field :car_type, :value => 'SittingCar'%>
    <div class="field">
      <%= f.label :amount_sitting_seats %><br>
      <%= f.text_field :amount_sitting_seats %>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :train, "Train" %><br>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= f.submit "#{ @car.new_record? ? 'Create Car' : 'Update Car'}"%>
    </div>

<% end %>

