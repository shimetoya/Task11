<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @route.title %>
</p>
<p>
  <strong>List of trains:</strong>
  <% if @route.trains.present? %>
    <ol>
      <% @route.trains.each do |train|%>
          <li><%= train.number %></li>
      <% end %>
    </ol>
  <% else %>
      Not indicated
  <% end %>
</p>
<p>
  <strong>All station on the route:</strong>
  <% if @route.stations.present? %>
    <ul>
    <% @route.stations.each do |station|%>
          <li><p>ID <%= station.id %> â„– <b><% @m = @route.stations_routes.each { |n| n.station_number } %><%= @m%></b> <%= link_to 'Edit', edit_station_path(station) %> <b><%= station.title %></b></li>
    <% end %>
    </ul>
  <% else %>
    Not indicated
  <% end %>
</p>

